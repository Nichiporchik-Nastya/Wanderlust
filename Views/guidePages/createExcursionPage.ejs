    <script>
        const answer = document.querySelectorAll(".accordion__text-block");
        const questions = document.querySelectorAll(".accordion__item");
        const answer_btns = document.querySelectorAll(".accordion__arrow");

        questions.forEach((question, index) => {
            question.addEventListener('click', () => {
                // questions.forEach((q, i) => {
                //     answer[i].classList.remove('is_open');
                //     answer_btns[i].classList.remove('close');
                // });
                answer[index].classList.toggle('is_open');
                answer_btns[index].classList.toggle('close');
            });
        });
    </script>
