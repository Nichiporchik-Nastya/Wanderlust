                <form class="order-form" onsubmit="OrderSubmit(event)">
                    <h3>Забронировать экскурсию</h3>


                    <div style="display: flex; align-items: flex-end;
                         gap: 20px; margin-bottom: 20px;">
                        <div class="calendar-wrapper">
                            <h5>Дата бронирования</h5>
                            <div class="calendar-top">
                                <span id="prev" class="icons">
                                </span>
                                <p class="current-date"></p>
                                <span id="next" class="icons">
                                </span>
                            </div>
                            <div class="calendar">
                                <ul class="weeks">
                                    <li>пн</li>
                                    <li>вт</li>
                                    <li>ср</li>
                                    <li>чт</li>
                                    <li>пт</li>
                                    <li style="color: var(--main-green)">сб</li>
                                    <li style="color: var(--main-green)">вс</li>
                                </ul>
                                <ul class="days"></ul>
                            </div>

                        </div>


                        <div class="calendar-help-block">
                            <div class="accessible-day selected">32</div>
                            Доступный для бронирования день
                        </div>

                    </div>

                    <div style="display: flex; gap: 40px; width: 100%;">
                        <div style="display: flex; flex-direction: column;
                           gap: 8px; width: 100%;">
                            <h5>Введите контактные данные</h5>
                            <div class="box-input">
                                <input type="name" name="name" id="name" class="input" placeholder=" ">
                                <label>Ваше имя</label>
                                <div class="box-input__error-text name-error"></div>
                            </div>

                            <div class="box-input">
                                <input type="phone" name="phone" id="phone" class="input" placeholder=" ">
                                <label>Номер телефона</label>
                                <div class="box-input__error-text phone-error"></div>
                            </div>

                            <div class="box-input">
                                <input type="email" name="email" id="email" class="input" placeholder=" ">
                                <label>Адрес электронной почты</label>
                                <div class="box-input__error-text email-error"></div>
                            </div>
                            <div class="client-count__wrapper">
                                <div class="client-count__item">
                                    <div class="client-count__item-wrap">
                                        <div class="client-count__name">Взрослый</div>
                                        <div class="client-count__cost">150 BYN</div>
                                    </div>
                                    <div class="client-count__item-wrap">
                                        <div class="client-count__plus">+</div>
                                        <div class="client-count__count">2</div>
                                        <div class="client-count__minus">–</div>
                                    </div>
                                </div>
                                <div class="client-count__item">
                                    <div class="client-count__item-wrap">
                                        <div class="client-count__name">Детский (2 — 12 лет)</div>
                                        <div class="client-count__cost">39 BYN</div>
                                    </div>
                                    <div class="client-count__item-wrap">
                                        <div class="client-count__plus">+</div>
                                        <div class="client-count__count">0</div>
                                        <div class="client-count__minus">–</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="min-width: 240px;">
                            <h5>Время начала экскурсии</h5>
